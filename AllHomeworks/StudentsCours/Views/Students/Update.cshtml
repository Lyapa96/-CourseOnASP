@model StudentsCours.Models.Student

@{
    ViewBag.Title = "Редактирование студента";
    Layout = "_StudentsLayout";
}

<h2>Редактирование студента</h2>
<div style="margin-top: 20px;">
    @using (Html.BeginForm("Update", "Students", FormMethod.Post))
    {
        <div>
            <div>@Html.DisplayNameFor(m => m.FirstName)</div>
            <div>@Html.EditorFor(m => m.FirstName)</div>
            <div>@Html.ValidationMessageFor(m => m.FirstName)</div>
        </div>

        <div>
            <div>@Html.DisplayNameFor(m => m.LastName)</div>
            <div>@Html.EditorFor(m => m.LastName)</div>
            <div>@Html.ValidationMessageFor(m => m.LastName)</div>
        </div>

        <div>
            <div>@Html.DisplayNameFor(m => m.Email)</div>
            <div>@Html.EditorFor(m => m.Email)</div>
            <div>@Html.ValidationMessageFor(m => m.Email)</div>
        </div>

        <div>
            <div>@Html.DisplayNameFor(m => m.PointsCount)</div>
            <div>@Html.EditorFor(m => m.PointsCount)</div>
            <div>@Html.ValidationMessageFor(m => m.PointsCount)</div>
        </div>

        <div style="margin-top: 10px;">
            <button class="btn btn-primary" type="submit">Сохранить</button>
        </div>
    }
</div>
